<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="/PletcherWebDesign3.0" extends="struts-default" namespace="/">
        <action name="users" class="com.pletcherwebdesign.actions.SignUp" method="execute">
            <result name="input">users.action</result>
            <result name="success">signup-success.jsp</result>
            <result name="error">signup-error.jsp</result>
        </action>
        <action name="review" class="com.pletcherwebdesign.actions.SubmitReview" method="execute">
            <result name="input">review.action</result>
            <result name="success">review-success.jsp</result>
            <result name="error">review-error.jsp</result>
        </action>
        <action name="infoSession" class="com.pletcherwebdesign.actions.SubmitInfoSession" method="execute">
            <result name="input">infosession.action</result>
            <result name="success">infosession-success.jsp</result>
            <result name="error">infosession-error.jsp</result>
        </action>
    </package>
</struts>
<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="/PletcherWebDesign3.0" extends="struts-default" namespace="/">
        <action name="users" class="com.pletcherwebdesign.actions.SignUp" method="execute">
            <result name="input">users.action</result>
            <result name="success">signup-success.jsp</result>
            <result name="error">signup-error.jsp</result>
        </action>
        <action name="review" class="com.pletcherwebdesign.actions.SubmitReview" method="execute">
            <result name="input">review.action</result>
            <result name="success">review-success.jsp</result>
            <result name="error">review-error.jsp</result>
        </action>
        <action name="infoSession" class="com.pletcherwebdesign.actions.SubmitInfoSession" method="execute">
            <result name="input">infosession.action</result>
            <result name="success">infosession-success.jsp</result>
            <result name="error">infosession-error.jsp</result>
        </action>
        <action name="contact" class="com.pletcherwebdesign.actions.ContactUs" method="execute">
            <result name="input">contact.action</result>
            <result name="success">contact-success.jsp</result>
            <result name="error">contact-error.jsp</result>
        </action>
        <action name="login" class="com.pletcherwebdesign.actions.LoginIntoSite" method="execute">
            <result name="input">login.action</result>
            <result name="admin_login">WEB-INF/admin-login-success.jsp</result>
            <result name="success">WEB-INF/client-login-success.jsp</result>
            <result name="error">WEB-INF/login-error.jsp</result>
        </action>
        <action name="ticket" class="com.pletcherwebdesign.actions.SubmitTicket" method="execute">
            <result name="input">ticket.action</result>
            <result name="success">WEB-INF/client-login-success.jsp</result>
            <result name="error">WEB-INF/client-login-success.jsp</result>
        </action>
        <action name="selectTicketForUpdate" class="com.pletcherwebdesign.actions.SelectTicketForUpdate" method="execute">
            <result name="input">selectTicketForUpdate.action</result>
            <result name="success">WEB-INF/ticket-update.jsp</result>
            <result name="error">WEB-INF/admin-login-success.jsp</result>
        </action>
        <action name="updateTicket" class="com.pletcherwebdesign.actions.TicketUpdate" method="execute">
            <result name="input">updateTicket.action</result>
            <result name="success">WEB-INF/admin-login-success.jsp</result>
            <result name="error">WEB-INF/admin-login-success.jsp</result>
        </action>
    </package>
</struts>